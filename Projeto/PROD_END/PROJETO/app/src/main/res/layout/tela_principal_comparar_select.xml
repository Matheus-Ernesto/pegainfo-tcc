<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_remover3"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="350dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/icone_remover"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spin_produtos"
        app:srcCompat="@drawable/icone_remover"
        android:contentDescription="@string/remover3"
        android:focusable="true" />

    <TextView
        android:id="@+id/txv_adicionar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/armata"
        android:text="@string/adicionar"
        android:textColor="@color/tema"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spin_produtos"
        android:layout_width="184dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:background="@color/white"
        android:clickable="true"
        app:layout_constraintStart_toEndOf="@+id/txv_adicionar"
        app:layout_constraintTop_toTopOf="parent"
        android:focusable="true" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lay_tabela"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="96dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spin_produtos">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_Plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="308dp"
        android:layout_marginTop="16dp"
        android:text="@string/plus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_remover1"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/icone_remover"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spin_produtos"
        app:srcCompat="@drawable/icone_remover"
        android:contentDescription="@string/remover1"
        android:focusable="true" />

    <ImageView
        android:id="@+id/img_remover2"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/icone_remover"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spin_produtos"
        app:srcCompat="@drawable/icone_remover"
        android:contentDescription="@string/remover2"
        android:focusable="true" />

</androidx.constraintlayout.widget.ConstraintLayout>