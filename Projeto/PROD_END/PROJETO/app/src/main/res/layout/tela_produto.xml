<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_produtoUnico"
        android:layout_width="168dp"
        android:layout_height="168dp"
        android:contentDescription="@string/modelo"
        android:src="@drawable/icones_sem_imagem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icones_sem_imagem" />

    <TextView
        android:id="@+id/txv_TituloModelo"
        android:layout_width="210dp"
        android:layout_height="72dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/armata"
        android:text="@string/modelo"
        android:textColor="@color/tema"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/img_produtoUnico"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txv_Ano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/armata"
        android:text="@string/ano_2000"
        android:textColor="@color/tema"
        app:layout_constraintStart_toEndOf="@+id/img_produtoUnico"
        app:layout_constraintTop_toBottomOf="@+id/txv_TituloModelo" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lay_Especificacao"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lay_Lojas"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lay_Especificacao">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/img_favoritar"
        android:layout_width="71dp"
        android:layout_height="57dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/icone_coracao_borda"
        android:clickable="true"
        app:layout_constraintStart_toEndOf="@+id/txv_Ano"
        app:layout_constraintTop_toBottomOf="@+id/txv_TituloModelo"
        app:srcCompat="@drawable/icone_coracao_borda"
        android:contentDescription="@string/favoritar"
        android:focusable="true" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="@string/informa_es_t_cnicas_do_produto"
        android:textColor="@color/tema"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txv_descricao_produto" />

    <TextView
        android:id="@+id/txv_descricao_produto"
        android:layout_width="380dp"
        android:layout_height="84dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/descri_o"
        android:textColor="@color/tema"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_produtoUnico" />
</androidx.constraintlayout.widget.ConstraintLayout>